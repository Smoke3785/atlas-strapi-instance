{
  "extends": "@strapi/typescript-utils/tsconfigs/admin",

  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "strict": true
  },

  "include": [
    "./admin/**/*",
    // "custom.d.ts",
    "@types/atlas.d.ts"
  ],

  "exclude": [
    "node_modules/",
    "dist/",

    // Do not include server files in the admin compilation
    "server/",
    // Do not include test files
    "**/*.test.ts"
  ]
}
